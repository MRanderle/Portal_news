<%- include('partials/head', { title: 'Dashboard' }) %>
<%- include('partials/navbar') %>

<div class="container">
    <%- include('partials/messages') %>
    
    <!-- Header do Dashboard -->
    <div class="card animate-fade-in" style="margin-bottom: 2rem; background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));">
        <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 1rem;">
            <div style="display: flex; align-items: center; gap: 1.5rem;">
                <% if (typeof user !== 'undefined' && user && user.foto_perfil) { %>
                    <img src="<%= user.foto_perfil %>" alt="Foto de perfil" 
                         style="width: 80px; height: 80px; border-radius: 50%; object-fit: cover; border: 4px solid var(--primary-color); box-shadow: var(--shadow-md);">
                <% } else { %>
                    <div style="width: 80px; height: 80px; border-radius: 50%; background: var(--primary-gradient); display: flex; align-items: center; justify-content: center; color: white; font-size: 2rem; box-shadow: var(--shadow-md);">
                        <i class="fas fa-user"></i>
                    </div>
                <% } %>
                <div>
                    <h2 style="color: var(--text-primary); margin: 0; font-family: 'Playfair Display', serif;">
                        Ol√°, <%= user.nome %>! üëã
                    </h2>
                    <p style="color: var(--text-muted); margin: 0; font-size: 1.1rem;">
                        Suas not√≠cias personalizadas est√£o prontas
                    </p>
                </div>
            </div>
            
            <!-- Bot√£o de Configura√ß√£o Melhorado -->
            <div style="display: flex; gap: 0.5rem; align-items: center;">
                <a href="/perfil" class="btn-config" style="
                    display: inline-flex;
                    align-items: center;
                    gap: 0.5rem;
                    padding: 12px 20px;
                    background: linear-gradient(135deg, #6366f1, #8b5cf6);
                    color: white;
                    text-decoration: none;
                    border-radius: 12px;
                    font-weight: 600;
                    font-size: 0.95rem;
                    transition: all 0.3s ease;
                    box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
                    border: none;
                " 
                onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 25px rgba(99, 102, 241, 0.4)'"
                onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 15px rgba(99, 102, 241, 0.3)'">
                    <i class="fas fa-user-cog"></i>
                    Meu Perfil
                </a>
                
                <a href="/logout" style="
                    display: inline-flex;
                    align-items: center;
                    gap: 0.5rem;
                    padding: 12px 16px;
                    background: #ef4444;
                    color: white;
                    text-decoration: none;
                    border-radius: 12px;
                    font-weight: 500;
                    font-size: 0.9rem;
                    transition: all 0.3s ease;
                    opacity: 0.8;
                "
                onmouseover="this.style.opacity='1'; this.style.transform='translateY(-1px)'"
                onmouseout="this.style.opacity='0.8'; this.style.transform='translateY(0)'">
                    <i class="fas fa-sign-out-alt"></i>
                    Sair
                </a>
            </div>
        </div>
    </div>
    
    <!-- Barra de A√ß√µes R√°pidas -->
    <div style="display: flex; gap: 1rem; margin-bottom: 2rem; flex-wrap: wrap; justify-content: center;">
        <a href="/perfil" style="
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 10px 16px;
            background: white;
            color: #6366f1;
            text-decoration: none;
            border-radius: 10px;
            font-weight: 500;
            font-size: 0.9rem;
            border: 2px solid #6366f1;
            transition: all 0.3s ease;
        "
        onmouseover="this.style.background='#6366f1'; this.style.color='white'"
        onmouseout="this.style.background='white'; this.style.color='#6366f1'">
            <i class="fas fa-tags"></i>
            Alterar Categorias
        </a>
        
        <a href="/perfil" style="
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 10px 16px;
            background: white;
            color: #10b981;
            text-decoration: none;
            border-radius: 10px;
            font-weight: 500;
            font-size: 0.9rem;
            border: 2px solid #10b981;
            transition: all 0.3s ease;
        "
        onmouseover="this.style.background='#10b981'; this.style.color='white'"
        onmouseout="this.style.background='white'; this.style.color='#10b981'">
            <i class="fas fa-camera"></i>
            Alterar Foto
        </a>
        
        <a href="/perfil" style="
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 10px 16px;
            background: white;
            color: #f59e0b;
            text-decoration: none;
            border-radius: 10px;
            font-weight: 500;
            font-size: 0.9rem;
            border: 2px solid #f59e0b;
            transition: all 0.3s ease;
        "
        onmouseover="this.style.background='#f59e0b'; this.style.color='white'"
        onmouseout="this.style.background='white'; this.style.color='#f59e0b'">
            <i class="fas fa-edit"></i>
            Editar Nome
        </a>
    </div>
    
    <!-- Grid de Not√≠cias do Dashboard MELHORADO -->
    <div class="news-grid animate-slide-in">
        <% if (noticias && noticias.length > 0) { %>
            <% noticias.forEach((noticia, index) => { %>
                <article class="news-card hover-lift hover-glow" style="animation-delay: <%= index * 0.1 %>s;">
                    <!-- Imagem ou V√≠deo -->
                    <% if (noticia.video_url) { %>
                        <div class="news-card-image">
                            <video 
                                controls 
                                preload="metadata"
                                style="width: 100%; height: 200px; object-fit: cover; border-radius: 8px 8px 0 0;"
                                poster="<%= noticia.imagem || '' %>"
                            >
                                <source src="<%= noticia.video_url %>" type="video/mp4">
                                <source src="<%= noticia.video_url %>" type="video/webm">
                                <source src="<%= noticia.video_url %>" type="video/ogg">
                                Seu navegador n√£o suporta a tag de v√≠deo.
                            </video>
                            <!-- Indicador de V√≠deo -->
                            <div style="
                                position: absolute;
                                top: 10px;
                                right: 10px;
                                background: rgba(0,0,0,0.7);
                                color: white;
                                padding: 4px 8px;
                                border-radius: 15px;
                                font-size: 0.8rem;
                                display: flex;
                                align-items: center;
                                gap: 4px;
                            ">
                                <i class="fas fa-play"></i>
                                V√≠deo
                            </div>
                        </div>
                    <% } else if (noticia.imagem) { %>
                        <div class="news-card-image">
                            <img src="<%= noticia.imagem %>" alt="<%= noticia.titulo %>" loading="lazy">
                        </div>
                    <% } %>
                    
                    <div class="news-card-content">
                        <% if (noticia.categoria_nome) { %>
                            <span class="news-category" style="background: <%= noticia.categoria_cor %>;">
                                <%= noticia.categoria_nome %>
                            </span>
                        <% } %>
                        
                        <h3 class="news-title">
                            <a href="/noticia/<%= noticia.id %>" style="color: inherit; text-decoration: none;">
                                <%= noticia.titulo %>
                            </a>
                        </h3>
                        
                        <% if (noticia.subtitulo) { %>
                            <p class="news-subtitle">
                                <%= noticia.subtitulo %>
                            </p>
                        <% } %>
                        
                        <!-- Preview do Conte√∫do -->
                        <% if (noticia.conteudo) { %>
                            <p style="
                                color: var(--text-muted);
                                font-size: 0.9rem;
                                line-height: 1.5;
                                margin: 1rem 0;
                                display: -webkit-box;
                                -webkit-line-clamp: 3;
                                -webkit-box-orient: vertical;
                                overflow: hidden;
                            ">
                                <%= noticia.conteudo.substring(0, 150) %>...
                            </p>
                        <% } %>
                        
                        <div class="news-meta">
                            <span>
                                <i class="far fa-calendar-alt"></i>
                                <%= new Date(noticia.criado_em).toLocaleDateString('pt-BR') %>
                            </span>
                            <span>
                                <i class="far fa-eye"></i>
                                <%= noticia.visualizacoes || 0 %> visualiza√ß√µes
                            </span>
                            
                            <!-- Indicadores de M√≠dia -->
                            <div style="display: flex; gap: 5px; margin-top: 5px;">
                                <% if (noticia.video_url) { %>
                                    <span style="
                                        background: #ef4444;
                                        color: white;
                                        padding: 2px 6px;
                                        border-radius: 10px;
                                        font-size: 0.7rem;
                                        display: flex;
                                        align-items: center;
                                        gap: 3px;
                                    ">
                                        <i class="fas fa-video"></i>
                                        V√≠deo
                                    </span>
                                <% } %>
                                <% if (noticia.imagem && !noticia.video_url) { %>
                                    <span style="
                                        background: #10b981;
                                        color: white;
                                        padding: 2px 6px;
                                        border-radius: 10px;
                                        font-size: 0.7rem;
                                        display: flex;
                                        align-items: center;
                                        gap: 3px;
                                    ">
                                        <i class="fas fa-image"></i>
                                        Imagem
                                    </span>
                                <% } %>
                                <% if (noticia.url_externa) { %>
                                    <span style="
                                        background: #6366f1;
                                        color: white;
                                        padding: 2px 6px;
                                        border-radius: 10px;
                                        font-size: 0.7rem;
                                        display: flex;
                                        align-items: center;
                                        gap: 3px;
                                    ">
                                        <i class="fas fa-external-link-alt"></i>
                                        Link
                                    </span>
                                <% } %>
                            </div>
                        </div>
                        
                        <!-- Bot√µes de A√ß√£o -->
                        <div style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--border-color); display: flex; gap: 0.5rem; flex-wrap: wrap;">
                            <a href="/noticia/<%= noticia.id %>" 
                               style="
                                   flex: 1;
                                   display: inline-flex;
                                   align-items: center;
                                   justify-content: center;
                                   gap: 0.5rem;
                                   padding: 8px 16px;
                                   background: linear-gradient(135deg, #6366f1, #8b5cf6);
                                   color: white;
                                   text-decoration: none;
                                   border-radius: 8px;
                                   font-size: 0.9rem;
                                   font-weight: 500;
                                   transition: all 0.3s ease;
                               "
                               onmouseover="this.style.transform='translateY(-1px)'; this.style.boxShadow='0 4px 12px rgba(99, 102, 241, 0.3)'"
                               onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='none'">
                                <i class="fas fa-book-open"></i>
                                Ler Completa
                            </a>
                            
                            <% if (noticia.url_externa) { %>
                                <a href="<%= noticia.url_externa %>" target="_blank" 
                                   style="
                                       display: inline-flex;
                                       align-items: center;
                                       justify-content: center;
                                       gap: 0.5rem;
                                       padding: 8px 12px;
                                       background: white;
                                       color: #6366f1;
                                       text-decoration: none;
                                       border: 2px solid #6366f1;
                                       border-radius: 8px;
                                       font-size: 0.9rem;
                                       font-weight: 500;
                                       transition: all 0.3s ease;
                                   "
                                   onmouseover="this.style.background='#6366f1'; this.style.color='white'"
                                   onmouseout="this.style.background='white'; this.style.color='#6366f1'">
                                    <i class="fas fa-external-link-alt"></i>
                                    Fonte
                                </a>
                            <% } %>
                        </div>
                    </div>
                </article>
            <% }) %>
        <% } else { %>
            <!-- Estado Vazio para Dashboard -->
            <div style="grid-column: 1 / -1;">
                <div class="card" style="text-align: center; padding: 4rem 2rem;">
                    <div style="font-size: 4rem; margin-bottom: 1.5rem; opacity: 0.5;">
                        <i class="fas fa-newspaper"></i>
                    </div>
                    <h3 style="color: var(--text-secondary); margin-bottom: 1rem; font-family: 'Playfair Display', serif;">
                        Nenhuma not√≠cia encontrada
                    </h3>
                    <p style="color: var(--text-muted); margin-bottom: 2rem; max-width: 400px; margin-left: auto; margin-right: auto;">
                        Parece que n√£o h√° not√≠cias nas suas categorias de interesse no momento. Que tal adicionar mais categorias?
                    </p>
                    <a href="/perfil" style="
                        display: inline-flex;
                        align-items: center;
                        gap: 0.5rem;
                        padding: 12px 24px;
                        background: linear-gradient(135deg, #6366f1, #8b5cf6);
                        color: white;
                        text-decoration: none;
                        border-radius: 12px;
                        font-weight: 600;
                        transition: all 0.3s ease;
                        box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
                    "
                    onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 25px rgba(99, 102, 241, 0.4)'"
                    onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 15px rgba(99, 102, 241, 0.3)'">
                        <i class="fas fa-tags"></i>
                        Selecionar Categorias
                    </a>
                </div>
            </div>
        <% } %>
    </div>
</div>

<!-- Script para anima√ß√µes e funcionalidades -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('üìä Dashboard carregado para:', '<%= user ? user.nome : "Usu√°rio" %>');
    
    // Anima√ß√£o suave para os cards de not√≠cias
    const newsCards = document.querySelectorAll('.news-card');
    newsCards.forEach((card, index) => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(20px)';
        
        setTimeout(() => {
            card.style.transition = 'all 0.6s ease';
            card.style.opacity = '1';
            card.style.transform = 'translateY(0)';
        }, index * 100);
    });
    
    // Lazy loading para v√≠deos
    const videos = document.querySelectorAll('video');
    videos.forEach(video => {
        video.addEventListener('loadstart', function() {
            console.log('üé• Carregando v√≠deo:', this.src);
        });
        
        video.addEventListener('loadeddata', function() {
            console.log('‚úÖ V√≠deo carregado:', this.src);
        });
        
        video.addEventListener('error', function() {
            console.error('‚ùå Erro ao carregar v√≠deo:', this.src);
            // Fallback para imagem se v√≠deo falhar
            const poster = this.getAttribute('poster');
            if (poster) {
                const img = document.createElement('img');
                img.src = poster;
                img.style.width = '100%';
                img.style.height = '200px';
                img.style.objectFit = 'cover';
                img.style.borderRadius = '8px 8px 0 0';
                this.parentNode.replaceChild(img, this);
            }
        });
    });
    
    // Log para debug
    console.log('üì∞ Total de not√≠cias:', newsCards.length);
    <% if (noticias && noticias.length > 0) { %>
        console.log('üìä Not√≠cias carregadas:', <%= noticias.length %>);
        const noticiasComVideo = document.querySelectorAll('video').length;
        console.log('üé• Not√≠cias com v√≠deo:', noticiasComVideo);
    <% } else { %>
        console.log('üì≠ Nenhuma not√≠cia encontrada');
    <% } %>
});
</script>

<%- include('partials/footer') %>